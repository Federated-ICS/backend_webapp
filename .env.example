# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://ics_user:ics_password@localhost:5432/ics_threat_detection

# For SQLite (development only)
# DATABASE_URL=sqlite+aiosqlite:///./ics_threat_detection.db

DB_ECHO=false

# Redis (Context Buffer)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Kafka (Event Streaming)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=ics_threat_detection
KAFKA_AUTO_OFFSET_RESET=earliest

# Neo4j (MITRE ATT&CK Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# CORS (Frontend URLs)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256

# Federated Learning Server
FL_SERVER_URL=http://localhost:8080
FL_MIN_CLIENTS=3

# Demo Mode
DEMO_MODE=true
SEED_DATA_ON_STARTUP=false
